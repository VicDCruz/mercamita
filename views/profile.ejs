<script type="text/javascript">
    function wishL(){
        var stat = document.getElementById('wL').style.display;
        if(stat == "none"){
            document.getElementById("wL").style.display = "block";
        }else{
            document.getElementById("wL").style.display = "none";
        }
    }
</script>

