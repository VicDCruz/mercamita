<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Producto</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <style>
        /* Make the image fully responsive */
        .carousel-inner img {
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body ng-controller="readCtrl" ng-init="product=<%=JSON.stringify(product)%>; seller=<%=JSON.stringify(seller)%>;">
    <div class="row">
        <div class="col-md-6">
                <div id="demo" class="carousel slide" data-ride="carousel">

                    <ul class="carousel-indicators">
                        <li ng-repeat="image in product.images" data-target="#demo" data-slide-to="{{$index}}" class="active" ng-if="$index == 0"></li>
                        <li ng-repeat="image in product.images" data-target="#demo" data-slide-to="{{$index}}" ng-if="$index > 0"></li>
                    </ul>

                    <div class="carousel-inner">
                        <div ng-repeat="image in product.images" class="carousel-item active" ng-if="$index == 0">
                            <img class="d-block w-100" src="/images/products/{{image}}" alt="{{product.name}}">
                        </div>
                        <div ng-repeat="image in product.images" class="carousel-item" ng-if="$index > 0">
                            <img class="d-block w-100" src="/images/products/{{image}}" alt="{{product.name}}">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="carousel-control-prev" href="#demo" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#demo" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="card-title">{{product.name}}</h2>
                </div>
                <div class="card-body">
                    <h3>${{product.price}}</h3>
                    <a role="button" class="btn btn-outline-danger" href="/products/{{product.id}}">Comprar</a>
                    <a role="button" class="btn btn-outline-success" ng-click="clickToOpen()">Agregar a </a>
                </div>
            </div>

            <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title">Características</h3>
                    </div>
                    <div class="card-body">
                        <h4>Descripción</h4>
                        <p>
                            {{product.description}}
                        </p>

                        <h4>Publicado</h4>
                        <p ng-if="product.createdAt">
                            {{product.createdAt}}
                        </p>
                        <p ng-if="!product.createdAt">
                            {{1542936706000 | date:'dd-MM-yyyy'}}
                        </p>

                        <div ng-if="seller">
                            <h4>Vendedor</h4>
                            <p>
                                {{seller.name}}
                            </p>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</body>
</html>